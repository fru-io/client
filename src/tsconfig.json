{
	"compilerOptions": {
	  "target": "esnext",
	  "declaration": true,
	  "lib": ["dom", "es2017"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": false,
	  "forceConsistentCasingInFileNames": true,
	  "noEmit": true,
	  "esModuleInterop": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "preserve",
	},
	"include": ["**/*.ts", "**/*.js", "**/*.tsx", "**/*.jsx"]
}
